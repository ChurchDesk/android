<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <dk.shape.churchdesk.widget.CustomTextView
        android:id="@+id/event_details_multi_category1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        tools:text="categori 1"
        android:textSize="12sp"
        android:maxLines="1"
        app:fontType="regular"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="@dimen/default_half_margin"
        android:drawableLeft="@drawable/multiselect_circle"
        android:drawableStart="@drawable/multiselect_circle"
        android:drawablePadding="@dimen/default_quarter_margin"
        />

    <dk.shape.churchdesk.widget.CustomTextView
        android:id="@+id/event_details_multi_category2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        tools:text="categori 2"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="12sp"
        app:fontType="regular"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="@dimen/default_half_margin"
        android:drawableLeft="@drawable/multiselect_circle"
        android:drawableStart="@drawable/multiselect_circle"
        android:drawablePadding="@dimen/default_quarter_margin"/>

</LinearLayout>