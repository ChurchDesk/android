<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/default_margin"
    android:paddingEnd="@dimen/default_half_margin"
    android:paddingLeft="@dimen/default_half_margin"
    android:paddingRight="@dimen/default_half_margin"
    android:paddingStart="@dimen/default_half_margin"
    android:paddingTop="@dimen/default_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/author_image"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="14"
            android:layout_marginRight="@dimen/margin_half"
            android:src="@color/default_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="86"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/default_quarter_margin">

            <dk.shape.churchdesk.widget.CustomTextView
                android:id="@+id/author_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="Philip Waters"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                app:fontType="medium" />

            <dk.shape.churchdesk.widget.CustomTextView
                android:id="@+id/comment_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_half_margin"
                android:text="It seems the weather has changed slightly. Now a few white clouds around."
                android:textColor="@android:color/black"
                android:textSize="14sp"
                app:fontType="regular" />

            <dk.shape.churchdesk.widget.CustomTextView
                android:id="@+id/ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="4 days ago"
                android:textColor="#949494"
                android:layout_marginTop="@dimen/margin_half"
                android:textSize="14sp"
                app:fontType="medium" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>