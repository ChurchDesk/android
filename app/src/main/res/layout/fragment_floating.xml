<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_background">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <FrameLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/multiple_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            fab:fab_addButtonColorNormal="@color/floating_button_background"
            fab:fab_addButtonColorPressed="@color/floating_button_background"
            fab:fab_addButtonPlusIconColor="@android:color/white"
            fab:fab_labelStyle="@style/FloatingMenuStyle"
            android:layout_marginBottom="@dimen/default_half_margin"
            android:layout_marginRight="@dimen/default_half_margin"
            android:layout_marginEnd="@dimen/default_half_margin">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/action_absence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/floating_button_background"
                fab:fab_colorPressed="@color/floating_button_background"
                fab:fab_size="mini" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/action_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/floating_button_background"
                fab:fab_colorPressed="@color/floating_button_background"
                fab:fab_size="mini" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/action_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/floating_button_background"
                fab:fab_colorPressed="@color/floating_button_background"
                fab:fab_size="mini" />

        </com.getbase.floatingactionbutton.FloatingActionsMenu>

    </RelativeLayout>
</RelativeLayout>
