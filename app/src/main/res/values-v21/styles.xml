<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTimePickerStyle" parent="AppTheme">
        <item name="android:timePickerDialogTheme">@style/MyTimePickerDialogTheme</item>
        <item name="android:colorAccent">@color/background_blue</item>
    </style>

    <style name="MyTimePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/background_blue</item>
        <item name="android:datePickerStyle">@style/MyTimePickerStyle</item>
    </style>

    <style name="MyTimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:colorAccent">#FC6C2D</item>
        <item name="android:selectableItemBackground">@color/background_blue</item>
    </style>

</resources>