<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:actionBarItemBackground">@android:color/transparent</item>
        <item name="colorControlActivated">@color/foreground_blue</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/background_blue</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>

        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@color/foreground_blue</item>
        <item name="android:textColor">@drawable/tab_host_textcolor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:dividerPadding">10dp</item>
        <item name="android:showDividers">middle</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:tabStripEnabled">false</item>
    </style>

    <style name="FloatingMenuStyle">
        <item name="android:background">@drawable/create_passive</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="WhiteEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/white</item>
        <item name="android:textColor">@color/background_blue</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:paddingLeft">@dimen/default_half_margin</item>
        <item name="android:paddingRight">@dimen/default_half_margin</item>
    </style>

    <style name="CustomTimePickerStyle" parent="AppTheme">
    </style>


</resources>
