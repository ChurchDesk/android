<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/focused_tv"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/calendar_background_selected_fill"/>

    <com.roomorama.caldroid.FontTextView
        app:fontName="MavenPro-Regular.ttf"
        android:id="@+id/calendar_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transparent_clickable"
        android:textColor="@color/grey_text"
        android:paddingTop="@dimen/margin_half"
        android:paddingBottom="@dimen/margin_half"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textSize="20sp" />

</RelativeLayout>
